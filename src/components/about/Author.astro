---
const leftTags = ["💻 博客写作者", "🥣 干饭魂 干饭人", "🕊 咕咕咕咕咕咕~", "🧱 自动化技术专业"];
const rightTags = ["吃饭不如碎觉 💤", "乐观 积极 向上 🤝", "活到老，学到老 🔨", "空闲分享资源和教程🌐"];
---

<div class="flex flex-wrap items-center justify-center gap-4 md:gap-6">
  <!-- 左侧标签 -->
  <div class="hidden md:flex flex-col items-end gap-2">
    {
      leftTags.map((t) => (
        <span
          class="inline-block w-max max-w-xs px-3 py-1 text-xs font-bold rounded-full
                 bg-base-200 dark:bg-base-300 border shadow-sm"
        >
          {t}
        </span>
      ))
    }
  </div>

  <!-- 头像 -->
  <div class="avatar">
    <div
      class="w-32 h-32 md:w-40 md:h-40 rounded-full
                ring-4 ring-primary ring-offset-4 ring-offset-base-100
                overflow-hidden"
    >
      <img src="/profile.png" alt="avatar" class="w-full h-full object-cover" />
    </div>
  </div>

  <!-- 右侧标签 -->
  <div class="hidden md:flex flex-col items-start gap-2">
    {
      rightTags.map((t) => (
        <span
          class="inline-block w-max max-w-xs px-3 py-1 text-xs font-bold rounded-full
                 bg-base-200 dark:bg-base-300 border shadow-sm"
        >
          {t}
        </span>
      ))
    }
  </div>
</div>
